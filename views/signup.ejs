<!doctype html>
<html>

<head>
     <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>Vote App</title>
    <meta name="description" content="Voting app">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--    <link rel="stylesheet" href="materialize.min.css">-->
    <link rel="stylesheet" href="bootstrap.min.css">
    <link rel="stylesheet" href="style.css">

    <script src="https://use.fontawesome.com/b0d85ca901.js"></script>
    <script src="Chart.js"></script>
</head>

<body>
    <div class="container">

<div class="col-sm-6 col-sm-offset-3 pollsSection loginSignupBox">

    <h1><span class="fa fa-sign-in"></span> Signup</h1>

    <!-- show any messages that come back with authentication -->
    <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %>

    <!-- LOGIN FORM -->
    <form action="/signup" method="post">
        <div class="form-group">
            <label>Email</label>
            <input type="text" class="form-control" name="email">
        </div>
        <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control" name="password">
        </div>

        <button type="submit" class="btn btn-default">Signup</button>
    </form>
      <br />
   
    <p>Already have an account? <a href="/login">Login</a></p>
    <p>Or go <a href="/">home</a>.</p>

</div>

</div>
    

   <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="http://localhost:5000/jquery.min.js"></script>
    <!-- Latest compiled and minified JavaScript -->
    <script src="http://localhost:5000/bootstrap.min.js"></script>
</body>

</html>